{
	"app": {
		"name": "Smoking Tracker",
		"slug": "smoking-tracker",
		"entry_name": "smoke break",
		"description": "smoke break tracker",
		"private": false,
		"icon": "ðŸš¬",
		"color": "#947a57",
		"storageType": "",
		"storage": "",
		"charts_placement": "",
		"entries_name": "smoke breaks"
	},
	"temporal": {
		"times": "yes",
		"ranges": ""
	},
	"entry": [
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal",
				"deletable"
			],
			"settings": {
				"expression": "weekday(date, 'shortname')"
			},
			"name": "weekday"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"type": "date",
				"default": "[$today]",
				"formatting": [
					"b"
				]
			},
			"name": "date"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"prefix": " at ",
				"type": "time",
				"default": "[time($startup, 'hours')]",
				"format": "[time(time, 'minutes')]"
			},
			"name": "time"
		},
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"visible": "false",
				"expression": "datetime(date, time)"
			},
			"name": "date_time"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"type": "text",
				"appearance": "line",
				"multiline": true
			},
			"name": "notes"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"prefix": "",
				"default": "1",
				"number_style": "bar",
				"bar_style": "discrete",
				"max": 10
			},
			"name": "cigs"
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"prefix": "Cigs = ",
				"expression": "cigs"
			},
			"name": "cig_num"
		}
	],
	"root": [
		{
			"type": "expression",
			"scope": "root",
			"settings": {
				"prefix": "Tracking since ",
				"expression": "duration($now - first(date_time))"
			}
		},
		{
			"type": "spacer",
			"scope": "root",
			"settings": {
				"appearance": "line"
			}
		},
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"target_preset": "new",
				"target": "add(entry)",
				"set_pairs": [
					{
						"name": "cigs",
						"value": "2"
					}
				],
				"filter_pairs": [],
				"label": "Smoked 2 Cigs"
			}
		},
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"visible": "true",
				"label": "âž• Add smoke break",
				"target": "add(entry)",
				"target_preset": "new",
				"appearance": "",
				"set_pairs": [],
				"filter_pairs": []
			}
		}
	],
	"charts": [
		{
			"type": "chart",
			"scope": "charts",
			"settings": {
				"type": "bar",
				"aggregate_of": "cigs",
				"group_by": "day",
				"aggregate": "sum"
			}
		}
	]
}